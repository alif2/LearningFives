@using ViewModels.SignUp
@model SummonerSignUpVM

<div class="form-group">
    @Html.LabelFor(m => m.SummonerName)
    @Html.TextBoxFor(m => m.SummonerName)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Server)
    @Html.DropDownListFor(m => m.Server, SummonerSignUpVM.ServerOptions)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.RankTier)
    @Html.DropDownListFor(m => m.RankTier, SummonerSignUpVM.RankTierOptions)
    @Html.DropDownListFor(m => m.RankDivision, SummonerSignUpVM.RankDivionOptions)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Age)
    @Html.TextBoxFor(m => m.Age)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)
</div>

<div class="form-group">
    @Html.LabelFor(m => m.HasSlackAccount)
    <label>@Html.RadioButtonFor(m=> m.HasSlackAccount, true) Yes</label>
    <label>@Html.RadioButtonFor(m => m.HasSlackAccount, false) No</label>
</div>
