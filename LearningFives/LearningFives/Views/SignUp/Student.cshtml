
@{
    ViewBag.Title = "Student";
}

<h2>Student Registration</h2>

<form role="form">
    <div class="form-group">
        <label>Registration Type:</label>
        <div class="radio no-top-margin">
            <label><input type="radio" name="optradio"/>Student, I want to play with a team for the next five weeks</label>
        </div>
        <div class="radio">
            <label><input type="radio" name="optradio"/>Substitute, I'm available to fill in for a player if they are not available</label>
        </div>
    </div>

    @{
        Html.RenderPartial("_SummonerInfo");
    }
    
    <hr/><!---------------------------------------------------------------------------------------------------------------->

    @{
        Html.RenderPartial("_RoleInfo");
    }

    <hr/><!---------------------------------------------------------------------------------------------------------------->

    @{
        Html.RenderPartial("_Availability");
    }

    <hr/><!---------------------------------------------------------------------------------------------------------------->

    <div class="form-group">
        <label for="languages">List the languages you speak:</label>
        <input class="form-control" type="text" id="languages"/>
    </div>

    <div class="form-group">
        <label for="preferred-players">List the summoner names of players or coaches you wish to be grouped with:</label>
        <input class="form-control" type="text" id="preferred-players"/>
    </div>

    <div class="form-group">
        <label for="player-strengths">What are your strengths as a player?</label>
        <textarea rows="5" class="form-control" id="player-strengths"></textarea>
    </div>

    <div class="form-group">
        <label for="player-improvement">What skill(s) do you want to improve?</label>
        <textarea rows="5" class="form-control" id="player-improvement"></textarea>
    </div>

    <div class="form-group">
        <label for="player-expectations">What do you expect from this program?</label>
        <textarea rows="5" class="form-control" id="player-expectations"></textarea>
    </div>

    @{
        Html.RenderPartial("_Commit");
        Html.RenderPartial("_Toxic");
    }

    <div class="form-group">
        <label for="more-information">Is there anything else you would like us to know?</label>
        <textarea rows="5" class="form-control" id="more-information"></textarea>
    </div>

    <div class="form-group">
        <div class="checkbox no-top-margin">
            <label><input type="checkbox"/>Email me sign-up information for future Learning Fives sessions</label>
        </div>
    </div>
</form>