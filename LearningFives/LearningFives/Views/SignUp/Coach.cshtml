@using ViewModels.SignUp
@model CoachSignUpVM

@{
    ViewBag.Title = "Coach Registration";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Coach", "SignUp", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new {@class = "text-danger"})

    <div class="form-group">
        @Html.LabelFor(m => m.CoachStatus)
        <label>@Html.RadioButtonFor(m => m.CoachStatus, 2) Coach, I want to run my own team</label>
        <label>@Html.RadioButtonFor(m => m.CoachStatus, 1) Substitute, I'm available to fill in for a coach if they are not available</label>
        <label>@Html.RadioButtonFor(m => m.CoachStatus, 0) Understudy, I want to help and support a team</label>
    </div>

    Html.RenderPartial("_SummonerInfo", new SummonerSignUpVM());
    <hr/>

    <div class="form-group">
        @Html.Label("What level of players are you most interested in coaching?")
            <label>@Html.CheckBoxFor(m => m.InterestedBronze) Bronze</label>
            <label>@Html.CheckBoxFor(m => m.InterestedSilver) Silver</label>
            <label>@Html.CheckBoxFor(m => m.InterestedGold) Gold</label>
            <label>@Html.CheckBoxFor(m => m.InterestedPlat) Platinum</label>
            <label>@Html.CheckBoxFor(m => m.InterestedDiamond) Diamond</label>
    </div>

    <div class="form-group">
        @Html.Label("Additionally, what level of players would you be willing to coach?")
            <label>@Html.CheckBoxFor(m => m.InterestedBronze) Bronze</label>
            <label>@Html.CheckBoxFor(m => m.InterestedSilver) Silver</label>
            <label>@Html.CheckBoxFor(m => m.InterestedGold) Gold</label>
            <label>@Html.CheckBoxFor(m => m.InterestedPlat) Platinum</label>
            <label>@Html.CheckBoxFor(m => m.InterestedDiamond) Diamond</label>
    </div>
    <hr/>

    Html.RenderPartial("_Availability", new AvailabilitySignUpVM());
    <hr/>

    <div class="form-group">
        @Html.LabelFor(m => m.Languages)
        @Html.TextBoxFor(m => m.Languages, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PairedPlayers)
        @Html.TextBoxFor(m => m.PairedPlayers, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CoachingStyle)
        @Html.TextAreaFor(m => m.CoachingStyle, new { @class = "form-control", rows = "5" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CoachingExperience)
        @Html.TextAreaFor(m => m.CoachingExperience, new { @class = "form-control", rows = "5" })
    </div>

    Html.RenderPartial("_Commit", new CommitmentSignUpVM());
    Html.RenderPartial("_Toxic", new ToxicSignUpVM());

    <div class="form-group">
        @Html.LabelFor(m => m.MoreInformation)
        @Html.TextAreaFor(m => m.MoreInformation, new { @class = "form-control", rows = "5" })
    </div>

    <div class="form-group">
        <label>@Html.CheckBoxFor(m => m.EmailSignUp) Email me sign-up information for future Learning Fives sessions</label>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}